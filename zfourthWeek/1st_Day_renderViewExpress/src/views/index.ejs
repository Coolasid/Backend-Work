<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Application</title>
    <link rel="stylesheet" href="css/index.css">
</head>
<body>
    <h1>Users List</h1> 

    <div>
       <h3> Users List </h3>
       <h3> <a href="/users/new"> Create new Task </a></h3>
    </div>

    <table>

        <thead>

            
            <tr>
                <th>First Name</th>
                
                <th>Last Name</th>
                
                <th>Email</th>
                
                <th>Age</th>
                
                <th>Update</th>
                
                <th>Delete</th>

                <th>Button</th>
            </tr>
        
        </thead>

        <tbody>

            <% items.forEach((user) => { %>

                <tr>
                    <td><%= user.firstName %></td>
                    <td><%= user.lastName %></td>
                    <td><%= user.email %></td>
                    <td><%= user.age %></td>
                    <td><a href="/users/<%= user._id %>/edit">Update <%= user.firstName  %></a></td>
                    <td><a href="/users/<%= user._id %>/delete">Delete <%= user.firstName %> </a></td>
                    <td><button onclick="showUser('<%=  JSON.stringify(user) %>')">Click Me</button></td>
                    
                </tr>

            <%  }) %>

        </tbody>
    </table>
    
</body>
</html>

<script src="js/index.js">

   
</script>